  <!-- ================================================= =============== -->
  <!-- ================================================= Servlet mapping -->
  <!-- ================================================= =============== -->
<!--
  <servlet-mapping>
    <servlet-name>dip-legacy</servlet-name>
    <url-pattern>/dxf</url-pattern>
  </servlet-mapping>
  -->
  <!--
  <servlet-mapping>
    <servlet-name>cxf-service</servlet-name>
    <url-pattern>/dxf</url-pattern>
  </servlet-mapping>
  -->

  <resource-ref>
    <description>Database Connection</description>
    <res-ref-name>jdbc/diplegacy</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  
  <!-- ================================================ ================ -->
  <!-- ================================================ = MIME mapping = -->
  <!-- ================================================ ================ -->

  <mime-mapping>
    <extension>inc</extension>
    <mime-type>text/plain</mime-type>
  </mime-mapping>
  
  <!-- ================================================ ================ -->
  <!-- ================================================ = WELCOME page = -->
  <!-- ================================================ ================ -->
  
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
</web-app>
